<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:useDefaultMargins="true"
    android:alignmentMode="alignMargins"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/caregiver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_rounded"
        android:layout_margin="4dp"
        android:padding="12dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_caregiver"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caregiver"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homecare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_rounded"
        android:layout_margin="4dp"
        android:padding="12dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home_care"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Care"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_rounded"
        android:layout_margin="4dp"
        android:padding="12dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_omah_mart"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OmahMart"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_rounded"
        android:layout_margin="4dp"
        android:padding="12dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_omah_ride"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OmahRide"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
    <!-- Repeat for Home Care, OmahMart, OmahRide -->

</GridLayout>
