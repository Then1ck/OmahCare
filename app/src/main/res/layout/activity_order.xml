<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".main_func.shop.OrderActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".main_func.shop.OrderActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="60dp">

            <!-- Back button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkout"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <!-- Address Label -->
            <TextView
                android:id="@+id/tvAlamatLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat :"
                android:textColor="#5e89e5"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvCheckout"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Address Value -->
            <TextView
                android:id="@+id/tvAlamat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Jalan Gajah Mada, Kota Pontianak blok 15..."
                android:textSize="12sp"
                android:textColor="#838282"
                app:layout_constraintTop_toTopOf="@id/tvAlamatLabel"
                app:layout_constraintStart_toEndOf="@id/tvAlamatLabel"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Product Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:layout_constraintTop_toBottomOf="@id/tvAlamatLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imgProduct"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_cart" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/tvProductName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tongkat Jalan"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tvProductPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp128.000"
                            android:textColor="#5e89e5"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tvDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="33% OFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="#b83c3c"
                            android:padding="4dp"
                            android:layout_marginTop="4dp" />

                        <!-- âŒ removed invalid paintFlags -->
                        <TextView
                            android:id="@+id/tvOldPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp200.000"
                            android:textColor="#808488"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x1"
                            android:textColor="#808488"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Voucher -->
            <TextView
                android:id="@+id/tvVoucherTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardProduct"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvDiscountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diskon 10%"
                android:textColor="#5e89e5"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvVoucherTitle"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Payment Details -->
            <TextView
                android:id="@+id/tvRincian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rincian Pembayaran"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvDiscountLabel"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvTotalHargaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga (1 Barang)"
                android:textSize="12sp"
                android:textColor="#c8c8c8"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvRincian"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvTotalHargaValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 128.000"
                android:textSize="12sp"
                android:textColor="#c8c8c8"
                app:layout_constraintBaseline_toBaselineOf="@id/tvTotalHargaLabel"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvProteksiLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Biaya Proteksi"
                android:textSize="12sp"
                android:textColor="#c8c8c8"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvTotalHargaLabel"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvProteksiValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 3.000"
                android:textSize="12sp"
                android:textColor="#c8c8c8"
                app:layout_constraintBaseline_toBaselineOf="@id/tvProteksiLabel"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/lineDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#c5c5c5"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvProteksiLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Total Pembayaran -->
            <TextView
                android:id="@+id/tvTotalPembayaranLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Pembayaran"
                android:textSize="12sp"
                android:textColor="#838282"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/lineDivider"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvTotalPembayaranValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 131.000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#5e89e5"
                app:layout_constraintBaseline_toBaselineOf="@id/tvTotalPembayaranLabel"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Section -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvBottomTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 131.000"
            android:textColor="#5e89e5"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBuatPesanan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:backgroundTint="#5e89e5"
            android:text="Buat Pesanan"
            android:textColor="@android:color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>