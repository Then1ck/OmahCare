<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onboarding5_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Transparent Gradient Overlay (bottom half) -->
    <View
        android:id="@+id/bottomOverlay"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/bg_gradient_overlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Text Section -->
    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        app:layout_constraintBottom_toTopOf="@+id/paginationDots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🩺 Caregiver On Demand"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesan perawat terpercaya kapan saja. Harian, mingguan, atau bulanan 🤝"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Pagination Dots -->
    <LinearLayout
        android:id="@+id/paginationDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <View
            android:layout_width="20dp"
            android:layout_height="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/dot_inactive"/>

        <View
            android:layout_width="20dp"
            android:layout_height="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/dot_active"/>

        <View
            android:layout_width="20dp"
            android:layout_height="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/dot_inactive"/>
        <View
            android:layout_width="20dp"
            android:layout_height="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/dot_inactive"/>
        <View
            android:layout_width="20dp"
            android:layout_height="5dp"
            android:background="@drawable/dot_inactive"/>
    </LinearLayout>

    <!-- Button -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Mulai"
        android:textColor="#5E89E5"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_rounded_button"
        android:layout_marginHorizontal="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>
