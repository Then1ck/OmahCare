<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="121dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/order_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/pfp_1"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/order_avatar"
            android:text="Menunggu Verifikasi"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_reg"
            android:layout_width="131dp"
            android:layout_height="30dp"
            android:layout_below="@id/order_title"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/order_avatar"
            android:text="No. REG/LN/20259183 - 18 Sep 2025"
            android:textSize="12sp" />

        <Button
            android:id="@+id/order_status"
            android:layout_width="86dp"
            android:layout_height="40dp"
            android:text="Diproses"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5e89e5"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
