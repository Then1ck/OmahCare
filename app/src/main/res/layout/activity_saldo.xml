<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_marginTop="@dimen/activity_top_margin">

    <!-- Title "Saldo" -->
    <TextView
        android:id="@+id/tvSaldoTitle"
        android:text="Saldo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Title"/>

    <!-- Back Icon Placeholder -->
    <ImageView
        android:id="@+id/ivBack"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
        style="@style/Back"/>

    <!-- Total Saldo -->
    <TextView
        android:id="@+id/tvTotalSaldoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Saldo"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvSaldoTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvTotalSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 1.000.000,00"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTotalSaldoLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"/>

    <!-- Poin Anda -->
    <TextView
        android:id="@+id/tvPointsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poin Anda"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvTotalSaldo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"/>

    <!-- Points progress bar -->
    <ProgressBar
        android:id="@+id/progressPoints"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:progress="72"
        android:max="100"
        android:progressTint="#5E89E5"
        android:backgroundTint="#D9D9D9"
        app:layout_constraintTop_toBottomOf="@id/tvPointsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"/>

    <!-- Bronze Badge -->
    <TextView
        android:id="@+id/tvBronzeBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bronze"
        android:padding="4dp"
        android:backgroundTint="#5E89E5"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/progressPoints"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <!-- Isi Saldo Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnIsiSaldo"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="+ Isi Saldo"
        android:backgroundTint="#5E89E5"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="@id/tvTotalSaldo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- Riwayat Section -->
    <TextView
        android:id="@+id/tvRiwayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riwayat"
        android:textSize="16sp"
        android:textColor="#202020"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvBronzeBadge"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <!-- Transaction Item Template -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTransaction1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvRiwayat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvTransactionTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi Saldo"
                android:textColor="#5E89E5"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvTransactionAmount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 1.000.000,00"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvTransactionDate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31 Agustus 2025, 11:57"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Repeat CardView for other transactions -->


</androidx.constraintlayout.widget.ConstraintLayout>
