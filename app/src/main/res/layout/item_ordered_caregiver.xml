<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/imageCaregiver"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_caregiver"
            android:background="@drawable/bg_rounded"/>

        <!-- Name -->
        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amy Ng"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/imageCaregiver"
            android:layout_marginStart="12dp"/>

        <!-- Experience -->
        <LinearLayout
            android:id="@+id/layoutExperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textName"
            android:layout_toEndOf="@id/imageCaregiver"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_exp"/>

            <TextView
                android:id="@+id/textExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 tahun pengalaman"
                android:textSize="12sp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Distance -->
        <LinearLayout
            android:id="@+id/layoutDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutExperience"
            android:layout_toEndOf="@id/imageCaregiver"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_dist"/>

            <TextView
                android:id="@+id/textDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5 km dari lokasi anda"
                android:textSize="12sp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
