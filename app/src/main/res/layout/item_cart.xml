<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Checkbox to the left of the Image -->
        <CheckBox
            android:id="@+id/checkBoxSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <!-- Product Image -->
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@id/checkBoxSelect"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"/>

        <!-- Product Name -->
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_marginStart="12dp"
            android:text="Tongkat Jalan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"/>

        <!-- Discounted Price -->
        <TextView
            android:id="@+id/tvDiscountPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductName"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_marginStart="12dp"
            android:text="Rp 128.000"
            android:textSize="14sp"
            android:textColor="@color/purple_500"
            android:textStyle="bold"/>

        <!-- Original Price -->
        <TextView
            android:id="@+id/tvOriginalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDiscountPrice"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_marginStart="12dp"
            android:text="Rp 200.000"
            android:textSize="12sp"/>

        <!-- Quantity -->
        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="x1"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <!-- Discount Tag -->
        <TextView
            android:id="@+id/tvDiscountTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvOriginalPrice"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_marginStart="12dp"
            android:text="33%"
            android:textColor="@android:color/white"
            android:padding="4dp"
            android:background="@color/purple_500"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
